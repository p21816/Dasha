<Window x:Class="Soccer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <DataGrid x:Name="SoccerDatagrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name ="TeamName" Header ="Name" Binding ="{Binding FootballClub.Name}"></DataGridTextColumn>
                <DataGridTextColumn x:Name ="Date" Header ="Date" Binding ="{Binding FinalDate}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Save" Click="Button_Click"></Button>
    </StackPanel>
</Window>
