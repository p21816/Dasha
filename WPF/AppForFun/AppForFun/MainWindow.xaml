<Window x:Class="AppForFun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userAdder ="clr-namespace:AppForFun"
        Title="DataBase" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Background="#5D8AA8" Height="50">
            <Image x:Name="img" Height="40" Width="40" Margin="160 0 10 0"  Source="https://cdn2.iconfinder.com/data/icons/player-rounded-set/154/volume-music-sound-plus-player-128.png" MouseEnter="img_MouseEnter" MouseLeave="img_MouseLeave" MouseLeftButtonDown="img_MouseLeftButtonDown"/>
            <Image x:Name="img1" Height="35" Width="35" Source="http://elclavo.com/wp-content/uploads/2016/09/8.-realice-mantenimientos.png" Stretch="Fill" MouseEnter="img1_MouseEnter" MouseLeave="img1_MouseLeave" MouseLeftButtonDown="img1_MouseLeftButtonDown" />
        </StackPanel>
        <StackPanel Background="#F2F3F4"  >
            <userAdder:UserAdder x:Name="adder" Margin="15" IsEnabled="False" Visibility="Hidden" ></userAdder:UserAdder>
            <Button x:Name="addUser" Content="Добавить" Margin="15 5" Click="Button_Click" IsEnabled="False" Visibility="Hidden"></Button>
            <DataGrid x:Name="dataGrid" IsEnabled="False" Visibility="Hidden"  >
            </DataGrid>
        </StackPanel>
    </DockPanel>

</Window>
